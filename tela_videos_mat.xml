<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/exercicios"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:textSize="45sp"
        android:layout_marginLeft="44dp"
        android:layout_marginStart="44dp"
        android:text="5°ano-1°bim-"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/voltar"
        android:layout_toEndOf="@+id/voltar" />
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        app:srcCompat="@drawable/matematica"
        android:layout_marginLeft="276dp"
        android:layout_marginStart="276dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="100dp">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="45sp"
            android:layout_marginLeft="90dp"
            android:text="VIDEO AULAS" />

        <Button
            android:id="@+id/listas"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="40sp"
            android:textColor="#696969"
            android:text="Exercícios"
            android:background="@android:color/transparent"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="200dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >





            <RelativeLayout
                android:layout_width="700dp"
                android:layout_height="400dp"
                android:layout_marginTop="200dp">

                <LinearLayout
                    android:layout_width="720dp"
                    android:layout_height="300dp"
                    android:background="#6058fc"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="82dp"
                    android:layout_marginStart="82dp">

                    <TextView
                        android:id="@+id/tituloAula1"
                        android:layout_width="90dp"
                        android:layout_height="80dp"
                        android:layout_weight="1"
                        android:text="Ordem Numérica"
                        android:textColor="#FFF"
                        android:textSize="40sp" />

                    <Button
                        android:id="@+id/play1"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:background="@drawable/play2" />

                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="700dp"
                android:layout_height="400dp"
                android:layout_marginTop="40dp">



                <LinearLayout
                    android:layout_width="720dp"
                    android:layout_height="300dp"
                    android:layout_marginTop="26dp"
                    android:background="#b555d5"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_marginLeft="89dp"
                    android:layout_marginStart="89dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true">

                    <TextView
                        android:id="@+id/tituloAula2"
                        android:layout_width="90dp"
                        android:layout_height="80dp"
                        android:layout_weight="1"
                        android:text="Classe Numérica"
                        android:textColor="#FFF"
                        android:textSize="40sp" />

                    <Button
                        android:id="@+id/play2"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:background="@drawable/play2" />

                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="700dp"
                android:layout_height="400dp"
                android:layout_marginTop="40dp">

                <LinearLayout
                    android:layout_width="720dp"
                    android:layout_height="300dp"
                    android:layout_marginTop="26dp"
                    android:background="#55a9d5"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_marginLeft="89dp"
                    android:layout_marginStart="89dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true">

                    <TextView
                        android:id="@+id/tituloAula3"
                        android:layout_width="90dp"
                        android:layout_height="80dp"
                        android:layout_weight="1"
                        android:text="Composição Numérica"
                        android:textColor="#FFF"
                        android:textSize="40sp" />

                    <Button
                        android:id="@+id/play3"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:background="@drawable/play2" />

                </LinearLayout>
            </RelativeLayout>




        </LinearLayout>
    </ScrollView>
    <Button
        android:id="@+id/voltar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/voltar2"
        android:layout_marginLeft="26dp"
        android:layout_marginStart="26dp"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
